<h1>Log in</h1>

<form action="/login" method="post">
  <div>
    <label>Username:</label>
    <input type="text" name="email"<% if (demoUser) { %>
        value="<%= demoUser.username %>"><% } %>
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password"<% if (demoUser) { %>
        value="<%= demoUser.password %>"><% } %>
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>

<p><small>Hint - bob:secret</small></p>
